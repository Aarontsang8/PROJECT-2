<!DOCTYPE html>
<html>
<head>
  <title>HappyhourApp</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <link href='http://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
</head>
<body>
  
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>      
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
         <% if !current_user %>
          <li><button type="button" class="btn btn-default btn-lg">
              <i class="fa fa-home"></i><%= link_to "HAPPY HOUR!", root_path %>
            </button>
          </li>

          <% else %>
          <li><button type="button" class="btn btn-default btn-lg">
              <i class="fa fa-home"></i><%= link_to "HAPPY HOUR!", root_path %>
            </button>
          </li>
               
         <li><button type="button" class="btn btn-default btn-lg">
              <i class="fa fa-beer"></i></i> <%= link_to "VIEW BARS", bars_path %>
            </button>
        </li>

        <li><button type="button" class="btn btn-default btn-lg">
              <i class="fa fa-plus"></i></i><%= link_to "ADD BAR",  new_bar_path %>
            </button> 
        </li>

          <% end %>



      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if !current_user %>
          <li><button type="button" class="btn btn-default btn-lg"><%= link_to "Sign Up", new_user_path %> </button> </li>
          <li><button type="button" class="btn btn-default btn-lg"><%= link_to "Sign In", new_sessions_path %></button></li>
        <% else %>
          <li id = "dof"><%= "Hello " + current_user.name.capitalize + " !" %></li>
          <li> <%= link_to "Sign Out", sessions_path, :method => :delete %></li>
        <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
    </div>  <!-- /.container-fluid -->
  </nav>



<div class="container-fluid">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>"><%= value %></div>
  <% end %>
  <%= yield %>
</div>

</body>
</html>
